{
  "name": "wu-tang-react-node-template",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "babel-core": "6.26.3",
    "body-parser": "1.19.0",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-jwt": "5.3.3",
    "jwks-rsa": "1.8.0",
    "lodash": "4.17.19",
    "mongoose": "5.9.14",
    "path": "0.12.7",
    "puppeteer": "3.0.4"
  },
  "devDependencies": {
    "concurrently": "5.2.0",
    "nodemon": "2.0.4"
  },
  "cacheDirectories": [
    "node_modules",
    "src/client/node_modules"
  ],
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon src/server",
    "prod-server": "node --optimize_for_size --max_old_space_size=460 --gc_interval=100 src/server",
    "client": "nodemon start-client.js",
    "dev": "echo \"This command has been deprecated. Use 'npm start'\" && exit 1",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "heroku-postbuild": "cd src/client/ && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  }
}
